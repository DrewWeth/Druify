<h1>Listing carousels</h1>

<table>
  <thead>
    <tr>
      <th>Controller name</th>
      <th>Image link</th>
      <th>Image asset link</th>
      <th>Main text</th>
      <th>Sub text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carousels.each do |carousel| %>
      <tr>
        <td><%= carousel.controller_name %></td>
        <td><%= carousel.image_link %></td>
        <td><%= carousel.image_asset_link %></td>
        <td><%= carousel.main_text %></td>
        <td><%= carousel.sub_text %></td>
        <td><%= link_to 'Show', carousel %></td>
        <td><%= link_to 'Edit', edit_carousel_path(carousel) %></td>
        <td><%= link_to 'Destroy', carousel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carousel', new_carousel_path %>
