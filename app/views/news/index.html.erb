<h1>Listing news</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Updated</th>

      <% if @is_admin %>
      <th>Archived</th>
      <th>Edit</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.content %></td>
        <td><%= news.updated_at.localtime %></td>

        <% if @is_admin %>
        <td><%= news.archived %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @is_admin %>
<%= link_to 'New News', new_news_path %>
<% end %>

