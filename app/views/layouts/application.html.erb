<!DOCTYPE html>
<html>
<head>
	<title>Druify</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<!-- <link href='http://fonts.googleapis.com/css?family=Cinzel+Decorative' rel='stylesheet' type='text/css'> -->
	<link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=UnifrakturMaguntia' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Carrois+Gothic+SC' rel='stylesheet' type='text/css'>
</head>
<body>
	<button class="arrow left" id="left-arrow">
		<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="60px" height="80px" viewBox="0 0 50 80" xml:space="preserve">
			<polyline fill="none" stroke="#FFFFFF" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" points="
			45.63,75.8 0.375,38.087 45.63,0.375 "/>
		</svg>  
	</button>

	<button class="arrow right" id="right-arrow">
		<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="60px" height="80px" viewBox="0 0 50 80" xml:space="preserve">
			<polyline fill="none" stroke="#FFFFFF" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" points="
			0.375,0.375 45.63,38.087 0.375,75.8 "/>
		</svg>
	</button>
	<div id="wrapper" class="name">
		<div class="background-image">
		</div>
		<div id="header">
			<center><h1><a style="color: #fff !important" href="<%= root_path %>">Drew Wetherington</a></h1>
				<%= link_to 'Projects', projects_path %> 

				| <%= link_to 'Blog Posts', posts_path %> 
				| <%= link_to 'Acounts', accounts_path %> 
				| <%= link_to 'News', news_index_path %>
				| <% if current_user == nil %>
				<%= link_to 'Login', new_user_session_path %>
				<% else %>
				<%= link_to current_user.email, edit_user_registration_path %>
				<% end %>
			</center>
		</center>
	</div>
	<div class="dark">
		<p><%= notice %></p>
		<p><%= alert %></p>

		<%= yield %>
	</div>
	<div id="footer">
			<button class="btn btn-small" style="border-color: #fff" id="next">Change Template!</button>
			<%= link_to 'Make A Template', templates_path %>


			<div class="pull-right">
				<a class="btn btn-social-icon btn-twitter" href="https://twitter.com/DrewWeth">
					<i class="fa fa-twitter"></i>
				</a>
				<a class="btn btn-social-icon btn-facebook" href="https://www.facebook.com/drew.wetherington">
					<i class="fa fa-facebook"></i>
				</a>
				<a class="btn btn-social-icon btn-github" href="https://github.com/DrewWeth">
					<i class="fa fa-github"></i>
				</a>
				<a class="btn btn-social-icon btn-google-plus" href="https://plus.google.com/u/0/113926987158062055829/posts">
					<i class="fa fa-google-plus"></i>
				</a>
				<a class="btn btn-social-icon btn-instagram" href="http://instagram.com/drewweth/">
					<i class="fa fa-instagram"></i>
				</a>
				<br>
			</div>
			<br>
			<br>
			Visits <%= number_with_delimiter(@count, :delimeter => ',') %>
		</div>
	</div>
</div>

<script>
	$('#left-arrow').click(function(){
		var obj = $('.background-image').css('background-image');
		var currentURL = obj.substring(obj.indexOf("(")+1, (obj.length-1));
			console.log(currentURL);
			var urls = [

			"https://farm4.staticflickr.com/3916/14693953093_fae5ba62b3_o.jpg", 
			"http://www.dotwallpapers.com/wp-content/uploads/wallpapers/Computer/Mystery-Bridge-Desktop-Wallpaper.jpg", 
			"http://wallpaperpanda.com/wallpapers/acd/B7A/acdB7Akji.jpg"];
			var i = $.inArray(currentURL, urls);
			console.log(i);
			console.log(urls.length);
			if (i > 0 && i < urls.length)
			{
				$('.background-image').css({'background-image': 'url(' + urls[i-1] + ')'} );
				$('body').css({'background-image': 'url(' + urls[i-1] + ')'});
			}
		});

	$('#right-arrow').click(function(){
		var obj = $('.background-image').css('background-image');
		var currentURL = obj.substring(obj.indexOf("(")+1, (obj.length-1));
			console.log(currentURL);
			var urls = [

			"https://farm4.staticflickr.com/3916/14693953093_fae5ba62b3_o.jpg", 
			"http://www.dotwallpapers.com/wp-content/uploads/wallpapers/Computer/Mystery-Bridge-Desktop-Wallpaper.jpg", 
			"http://wallpaperpanda.com/wallpapers/acd/B7A/acdB7Akji.jpg"];
			var i = $.inArray(currentURL, urls);
			console.log(i);
			console.log(urls.length);
			if (i >= 0 && i < urls.length-1)
			{
				$('.background-image').css({'background-image': 'url(' + urls[i+1] + ')'} );
				$('body').css({'background-image': 'url(' + urls[i+1] + ')'});
			}
		});
</script>

<script>
	$('#next').click(function(){
		$.ajax({
			url: 'templates/next/0',

		}).done(function(url){
			var str = "url(" + url + ") no-repeat top center fixed";
			$('body').css('background', str);
		});
	});
</script>
</body>
</html>
