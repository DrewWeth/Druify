<h1>Listing templates</h1>
<table class="table table-templates table-responsive table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Background URL</th>
      <th>Accent</th>
      <th>Blocks</th>
      <th>Header</th>
      <th>Unvisited</th>
      <th>Visited</th>


    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <% if template.id == @curr_template %>
        <tr style="background-color: <% if !@accent.empty? %> <%= @accent %> <% else %> <%= @header_bg %> <% end %>">
      <% else %>
      <tr>
      <% end %>

        <td><%= template.id %></td>
        <td><%= link_to template.bgUrl, template %></td>
        <td><%= template.accentColor %></td>
        <td><%= template.darkClassColor %></td>
        <td><%= template.headerColor %></td>
        <td><%= template.linkColor %></td>
        <td><%= template.unvisitedLinkColor %></td>

        
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if @is_admin %>
  <%= link_to 'New Template', new_template_path %>
<% end %>
